@using Microsoft.AspNetCore.Mvc.TagHelpers
@model System.Collections.Generic.IList<ArizaApp.Models.Dtos.UserDto>

@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "_Layout";
}

<a class="btn btn-primary font-weight-bold my-3" asp-action="CreateUser">Yeni Kullanıcı</a>

<table id="getUsers" class="display table table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>İsim</th>
        <th>Soyisim</th>
        <th>Departman</th>
        <th>Rol</th>
        <th>Not</th>
        <th>Yollanan Mail</th>
        <th style="max-width: 300px">İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Name</td>
            <td>@user.Surname</td>
            <td>@user.DepartmentName</td>
            <td>@user.RoleName</td>
            <td>@user.Note</td>
            <td>@user.SendCount</td>
            <td>
                @if (user.IsActive)
                {
                    <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Sil</a>
                }
                else
                {
                    <a asp-controller="Admin" asp-action="ActivateUser" asp-route-id="@user.Id" class="btn btn-success btn-sm">Aktifleştir</a>
                }
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>İsim</th>
        <th>Soyisim</th>
        <th>Departman</th>
        <th>Rol</th>
        <th>Not</th>
        <th>Yollanan Mail</th>
        <th style="max-width: 300px">İşlemler</th>
    </tr>
    </tfoot>
</table>