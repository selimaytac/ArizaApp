@using Microsoft.AspNetCore.Mvc.TagHelpers
@model System.Collections.Generic.List<ArizaApp.Models.Entities.Department>

@{
    ViewBag.Title = "Email Adresleri";
    Layout = "_Layout";
}

<a class="btn btn-primary font-weight-bold my-3" asp-action="CreateDepartment" asp-controller="Department">Departman Ekle</a>

<table id="getDepartments" class="display table table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Departman Adı</th>
        <th>Departman Açıklaması</th>
        <th style="max-width: 300px">İşlemler</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var department in Model)
    {
        <tr class="text-center">
            <td>@department.DepartmentName</td>
            <td>@department.Description</td>
            <td>
                <a asp-controller="Department" asp-action="UpdateDepartment" asp-route-id="@department.Id" class="btn btn-warning btn-sm">Güncelle</a>
                <a asp-controller="Department" asp-action="DeleteConfirmDepartment" asp-route-id="@department.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th>Departman Adı</th>
        <th>Departman Açıklaması</th>
        <th style="max-width: 300px">İşlemler</th>
    </tr>
    </tfoot>
</table>