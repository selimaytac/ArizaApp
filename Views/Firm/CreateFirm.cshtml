@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ArizaApp.Models.Dtos.CreateFirmDto
@{
    ViewBag.Title = "Yeni Firma";
    Layout = "_Layout";
}

<h1 class="text-center">Yeni Firma Kayıt Formu</h1>

<hr/>
<div class="row">
    <div class="offset-md-4 col-md-4">
        <form asp-action="CreateFirm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirmName" class="control-label"></label>
                <input asp-for="FirmName" class="form-control"/>
                <span asp-validation-for="FirmName" class="text-danger"></span>
            </div>
            @if (ViewBag.Emails != null)
            {
                <div class="form-group">
                    <label class="control-label">Firmaya Eklenecek Mailleri Seçiniz.</label>
                    @Html.DropDownList("EmailIds", new MultiSelectList(ViewBag.Emails, "Id", "EmailAddress"), new { multiple = "multiple"})
                    <span asp-validation-for="EmailIds" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Yeni Firma Oluştur" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>