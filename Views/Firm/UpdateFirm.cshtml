@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ArizaApp.Models.Dtos.UpdateFirmDto

@{
    ViewData["Title"] = "Mail Adresini Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><span class="font-weight-bold">@Model.FirmName</span> Firmasını Güncelle</h1>
<h4 class="text-warning">Not: Seçili gelen maillerin seçimini kaldırmak mail adresini firmadan silecektir.</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateFirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="FirmName" class="control-label"></label>
                <input asp-for="FirmName" class="form-control"/>
                <span asp-validation-for="FirmName" class="text-danger"></span>
            </div>
            
            @if(ViewBag.NotIncludedEmailsMultiSelectList != null){
            <div class="form-group">
                <label class="control-label">Firmaya <span class="text-success">eklemek</span> istediğiniz ilgili mailleri seçiniz.</label>
                @Html.DropDownList("AddedEmailIds", (MultiSelectList) ViewBag.NotIncludedEmailsMultiSelectList, new {multiple = "multiple"})
            </div>
            }
            
            @if(ViewBag.CurrentEmailsMultiSelectList != null){
            <div class="form-group">
                <label class="control-label">Firmadan <span class="text-danger">silmek</span> istediğiniz ilgili mailleri seçiniz.</label>
                @Html.DropDownList("DeletedEmailIds", (MultiSelectList) ViewBag.CurrentEmailsMultiSelectList, new {multiple = "multiple"})
            </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

