@using Microsoft.AspNetCore.Mvc.TagHelpers
@model System.Collections.Generic.List<ArizaApp.Models.Entities.EmailRecord>

@{
    ViewBag.Title = "Email Adresleri";
    Layout = "_Layout";
}

<a class="btn btn-primary font-weight-bold my-3" asp-action="CreateEmail" asp-controller="Mail">Email Ekle</a>

<table id="getEmails" class="display table table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Email Adresi</th>
        <th>Email Açıklaması</th>
        <th style="max-width: 300px">İşlemler</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var email in Model)
    {
        <tr class="text-center">
            <td>@email.EmailAddress</td>
            <td>@email.EmailDescription</td>
            <td>
                <a asp-controller="Mail" asp-action="UpdateEmail" asp-route-id="@email.Id" class="btn btn-warning btn-sm">Güncelle</a>
                <a asp-controller="Mail" asp-action="DeleteConfirmEmail" asp-route-id="@email.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th>Email Adresi</th>
        <th>Email Açıklaması</th>
        <th style="max-width: 300px">İşlemler</th>
    </tr>
    </tfoot>
</table>